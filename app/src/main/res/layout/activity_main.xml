<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/adminButtonEnable"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
    />
    <Button
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/adminButtonDisable"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
    />
    <Button
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/startServiceButton"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
    />
    <Button
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/stopServiceButton"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
    />
</LinearLayout>
